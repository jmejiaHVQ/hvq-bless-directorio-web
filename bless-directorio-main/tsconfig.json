{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/services": ["./services"],
      "@/services/*": ["./services/*"],
      "@/shared": ["./shared"],
      "@/shared/*": ["./shared/*"],
      "@/frontend/*": ["./frontend/*"],
      "@/assets/*": ["./assets/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", ".next/types/app/specialties/[specialty]/[doctor]/page.tsx", ".next/types/app/specialties/page.tsx", ".next/types/app/selection/page.tsx", ".next/types/app/doctors/search/page.tsx", ".next/types/app/page.tsx", ".next/types/app/layout.tsx"],
  "exclude": ["node_modules"]
}
